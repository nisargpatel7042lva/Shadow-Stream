# ShadowStream Environment Variables
# Copy this file to .env.local and fill in your values

# Database Configuration
# For Neon.tech: Get connection string from your Neon dashboard
# Format: postgresql://user:password@host/database?sslmode=require
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"

# NextAuth Configuration
# URL where your app is hosted (for production, use your domain)
NEXTAUTH_URL="http://localhost:3000"
# Generate a random secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"

# Solana Configuration
# RPC endpoint for Solana network
SOLANA_RPC_URL="https://api.devnet.solana.com"
# Network: devnet, testnet, or mainnet-beta
SOLANA_NETWORK="devnet"

# Application Configuration
# Base URL of your application
APP_URL="http://localhost:3000"
# Environment: development, production, or test
NODE_ENV="development"

# Smart Contract Configuration
# Program ID of deployed bulk-payment contract (set after deployment)
# Get this from: anchor deploy --provider.cluster devnet
BULK_PAYMENT_PROGRAM_ID=""
